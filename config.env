# ============================================================================
# Centralized configuration for Dremio + dbt platform
# Edit these values to customize your deployment

# ============================================================================
# DREMIO
# ============================================================================
DREMIO_URL=http://localhost:9047
DREMIO_USER=dremio
DREMIO_PASSWORD=dremio123

# ============================================================================
# POSTGRESQL
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=business_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Docker internal hostname (for Dremio to connect)
POSTGRES_DOCKER_HOST=postgres

# ============================================================================
# ELASTICSEARCH
# ============================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Docker internal hostname
ELASTICSEARCH_DOCKER_HOST=elasticsearch

# Indices to create
ELASTICSEARCH_INDICES=application_logs,user_events,performance_metrics

# ============================================================================
# MINIO
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=sales_data
MINIO_CONSOLE_PORT=9001

# Docker internal hostname
MINIO_DOCKER_HOST=minio

# ============================================================================
# DBT
# ============================================================================
DBT_PROJECT_DIR=dbt
DBT_PROFILES_DIR=dbt
DBT_TARGET=dev
DBT_THREADS=4

# ============================================================================
# DATA GENERATION VOLUMES
# ============================================================================
# Number of records to generate for each source
DATA_CUSTOMERS=1000
DATA_ORDERS=10000
DATA_ES_LOGS=20000
DATA_ES_EVENTS=20000
DATA_ES_METRICS=20000
DATA_MINIO_SALES=50000

# ============================================================================
# DEPLOYMENT OPTIONS
# ============================================================================
# Skip steps if already completed
SKIP_DOCKER_START=false
SKIP_VENV_CREATION=false
SKIP_DATA_GENERATION=false
SKIP_DBT_TESTS=false

# Timeouts (seconds)
DREMIO_STARTUP_TIMEOUT=120
ELASTICSEARCH_STARTUP_TIMEOUT=60
MINIO_STARTUP_TIMEOUT=60
POSTGRES_STARTUP_TIMEOUT=30

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=deployment.log
